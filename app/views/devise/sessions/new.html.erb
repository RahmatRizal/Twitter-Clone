<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="colums is-4">
        <h2 class="title is-2">Login</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                required: false,
                autofocus: true,
                wrapper: false,
                label_html: {class: "label"},
                input_html: { class: "input", autocomplete: "email" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                required: false,
                wrapper: false,
                label_html: {class: "label"},
                input_html: { class: "input", autocomplete: "current-password" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
          <%= f.button :submit, "Log in", class: "button is-info" %>
        <% end %>
        <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
